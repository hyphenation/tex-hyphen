category TLCore
depend hyphen-base
depend hyph-utf8
shortdesc Croatian hyphenation patterns.
longdesc Hyphenation patterns for Croatian in T1/EC and UTF-8 encodings.
execute AddHyphen \
	name=croatian \
	lefthyphenmin=2 \
	righthyphenmin=2 \
	file=loadhyph-hr.tex \
	file_patterns=hyph-hr.pat.txt \
	file_exceptions=
runpattern f tex/generic/hyph-utf8/loadhyph/loadhyph-hr.tex
runpattern f tex/generic/hyph-utf8/patterns/ptex/hyph-hr.ec.tex
runpattern f tex/generic/hyph-utf8/patterns/tex/hyph-hr.tex
runpattern f tex/generic/hyph-utf8/patterns/txt/hyph-hr.chr.txt
runpattern f tex/generic/hyph-utf8/patterns/txt/hyph-hr.hyp.txt
runpattern f tex/generic/hyph-utf8/patterns/txt/hyph-hr.lic.txt
runpattern f tex/generic/hyph-utf8/patterns/txt/hyph-hr.pat.txt
